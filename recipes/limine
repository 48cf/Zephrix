#!/bin/bash

name=limine
version=10.6.3
tarball_url="https://codeberg.org/Limine/Limine/releases/download/v${version}/limine-${version}.tar.gz"
tarball_blake2b="18af983fc843094903b5da35716f268655ab4b490810fffe4e37dead5eed83b08b3b18a714cee5d4a203991c71fc1b97f28efb2f0f68cf8305d5e5a684bca504"
revision=1
imagedeps="mtools nasm llvm lld clang"
hostdeps="gcc pkgconf"
deps="core-libs"

configure() {
    autotools_configure \
        --enable-all
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
