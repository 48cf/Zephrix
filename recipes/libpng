#!/bin/bash

name=libpng
version=1.6.54
tarball_url="https://prdownloads.sourceforge.net/libpng/libpng-${version}.tar.xz"
tarball_blake2b="a91ebb8396d9a5de10d642cc8891d594dacd480248fdb73859f8317fc6cbadf0f542acf446955f2e78e8655439464bbad600993491e3e97474a91c65d703fef7"
revision=1
hostdeps="gcc pkgconf"
deps="core-libs zlib"

configure() {
    cmake_configure \
        -DPNG_STATIC=OFF \
        -DPNG_TESTS=OFF
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
