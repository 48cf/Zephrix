#!/bin/bash

name=fast_float
version=8.2.2
git_url="https://github.com/fastfloat/fast_float.git"
commit=97b54ca9e75f5303507699d27c6b4f4efe4641a1
revision=1
hostdeps="gcc pkgconf"
deps="core-libs"

configure() {
    cmake_configure
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
