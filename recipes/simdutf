#!/bin/bash

name=simdutf
version=8.0.0
git_url="https://github.com/simdutf/simdutf.git"
commit=7f3757fba1b426e7f583011ba7bc4e700a8fbb1a
revision=1
hostdeps="gcc pkgconf"
deps="core-libs"

configure() {
    cmake_configure \
        -DSIMDUTF_TESTS=OFF
}

build() {
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
