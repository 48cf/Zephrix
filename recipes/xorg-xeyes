#!/bin/bash

name=xorg-xeyes
repology_id=xeyes
version=1.3.1
git_url="https://gitlab.freedesktop.org/xorg/app/xeyes.git"
commit=7dc4f720f57471d2eccefd87cdca54494cf75eb5
revision=1
hostdeps="gcc pkgconf"
deps="core-libs libx11 libxcb libxext libxi libxmu libxrender libxt"

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
