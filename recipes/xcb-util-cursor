#!/bin/bash

name=xcb-util-cursor
version=0.1.6
tarball_url="https://xcb.freedesktop.org/dist/xcb-util-cursor-${version}.tar.xz"
tarball_blake2b="29af857a74cdad1e08c0fd59fb5812f51077f9868eb603365f76e50d380ecb01657fb0214f2ddee9aff90ee1d367a4f8e24eac2b9fff4459d21a8184f796e70c"
revision=1
hostdeps="gcc pkgconf"
deps="core-libs libxcb xcb-util-image xcb-util-renderutil"

configure() {
    autotools_configure
}

build() {
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
